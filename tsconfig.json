{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
		"noImplicitAny": false,
		"suppressImplicitAnyIndexErrors": true,
		"lib": [
			"es2015",
			"dom"
		],
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"removeComments": false,
		"sourceMap": true,
		"outDir": "./dist",
		"noLib": false,
		"declaration": true
	},
	"exclude": [
		"node_modules",
		"dist"
	],
	"angularCompilerOptions": {
		"genDir": "dist/compiled"
	}
}