{
    "compilerOptions": {
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "noImplicitAny": false,
        "suppressImplicitAnyIndexErrors": true,
		"lib": [
			"es6",
			"dom"
		],
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "removeComments": true,
        "sourceMap": true,
        "outDir": "./dist",
        "noLib": false,
        "declaration": true
    },
    "exclude": [
        "node_modules",
        "typings/main.d.ts",
        "typings/main",
        "dist"
    ],
    "filesGlob": [
        "./src/*/*.ts",
        "./*.ts"
    ]
}
